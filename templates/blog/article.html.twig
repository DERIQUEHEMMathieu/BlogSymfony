{% extends "base.html.twig" %}

{% block body %}

<article class="jumbotron">
  <h1 class="display-3">{{ article.title }}</h1>
  <h2 class="display-3"></h2>
  <p class="lead">{{ article.authorName }}</p>
  <hr class="my-5">
  <p>{{ article.content }}</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/" role="button">Retour</a>
  </p>
</article>

{% endblock %}